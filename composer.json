{
    "name": "leapt/im-bundle",
    "type": "symfony-bundle",
    "description": "Imagemagick wrapper for Symfony",
    "keywords": ["image", "thumbnail", "imagemagick", "symfony"],
    "homepage": "https://github.com/leapt/im-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Pierre Vanliefland",
            "email": "pierre@snowcap.be"
        },
        {
            "name": "Edwin Hermans",
            "email": "edwin@snowcap.be"
        },
        {
            "name": "Jérôme Poskin",
            "email": "jerome@snowcap.be"
        },
        {
            "name": "Snowcap",
            "homepage": "http://www.snowcap.be"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2",
        "doctrine/annotations": "^1.5",
        "doctrine/orm": "^2.5",
        "leapt/core-bundle": "^2.4",
        "symfony/css-selector": "^4.0|^5.0",
        "symfony/console": "^4.0|^5.0",
        "symfony/dom-crawler": "^4.0|^5.0",
        "symfony/filesystem": "^4.0|^5.0",
        "symfony/finder": "^4.0|^5.0",
        "symfony/form": "^4.0|^5.0",
        "symfony/framework-bundle": "^4.0|^5.0",
        "symfony/process": "^4.0|^5.0",
        "twig/twig": "^2.4|^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16.1",
        "mikey179/vfsstream": "v1.0.0",
        "phpstan/phpstan": "^0.12.4",
        "phpunit/phpunit": "^8.5"
    },
    "scripts": {
        "cs:dry": "php-cs-fixer fix --diff --diff-format=udiff --dry-run --no-interaction --ansi",
        "cs:fix": "php-cs-fixer fix --ansi",
        "phpstan": "vendor/bin/phpstan analyse --ansi"
    },
    "autoload": {
        "psr-4": {
            "Leapt\\ImBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leapt\\ImBundle\\Tests\\": "tests/"
        }
    }
}
